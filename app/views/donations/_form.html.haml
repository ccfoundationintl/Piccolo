= form_for(@donation) do |f|
  - if @donation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@donation.errors.count, "error")} prohibited this donation from being saved:"
      %ul
        - @donation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount, class: "label"
    = f.text_field :amount, class: "form-control"
  .field
    = f.label :is_registration_fee, class: "label"
    = f.check_box :is_registration_fee
  .field
    = f.label :is_donation, class: "label"
    = f.check_box :is_donation
  .actions
    = f.submit 'Save donation', class: "btn btn-md btn-block btn-success"
