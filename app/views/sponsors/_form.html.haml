= form_for(@sponsor) do |f|
  - if @sponsor.errors.any?
    #error_explanation
      %h2
        = pluralize(@sponsor.errors.count, "error")
        prohibited this sponsor from being saved:
      %ul
        - @sponsor.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .actions
    = f.submit
