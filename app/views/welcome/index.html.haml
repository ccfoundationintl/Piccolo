.jumbotron
  %video#bgvid{:autoplay => true, :loop => true, :poster => "https://s3.amazonaws.com/htb-dc/htb-bg.jpg"}
    %source{:src => "https://s3.amazonaws.com/htb-dc/htb-video.mp4", :type => "video/mp4"}
    %source{:src => "https://s3.amazonaws.com/htb-dc/htb-video.webm", :type => "video/webm; codecs=vp8),vorbis"}
    %img{src: "https://s3.amazonaws.com/htb-dc/bg-image.jpg"}
  /[if lt IE 9]
    :javascript
      document.createElement('video');
  .container.text-center
    %br
    %br
    %h1 Hit The Bricks: DC
    %br
    %p Support our runners: 100% of your donations go to cancer research
    %br
    %br
    .row
      .col-md-4.col-md-offset-4
        = link_to "Join the fun run!", new_user_registration_path, class: "btn btn-block btn-lg btn-primary donation-amount-btn", id: "stripeButton"
        %br
        %br
        = link_to "or donate to the cause", donations_path, class: "btn btn-md btn-default btn-sign-up"
.container
  .row
    %h2.text-center.text-muted Saturday, October 1st at 9am
    %p.text-center.lead National Mall
  .row
    .col-md-10.col-md-offset-1.text-center
      %br
      %p.lead=APP_CONFIG['site_description']
      %br
      %br
  / .row
  /   .col-md-6
  /     %h3 Top 10 Teams
  /     %table.table.table-bordered
  /       - @top_10_teams.each_with_index do |team, index|
  /         %tr
  /           %td.text-center
  /             %strong= "#{index+1}"
  /           %td= link_to(team.name, team)
  /           %td.text-success.text-center= number_to_currency(team.amount_raised)
  /   .col-md-6
  /     %h3="Top 10 #{APP_CONFIG['participant_type'].capitalize.pluralize(2)}"
  /     %table.table.table-bordered
  /       - @top_10_users.each_with_index do |user, index|
  /         %tr
  /           %td.text-center
  /             %strong= "#{index+1}"
  /           %td= link_to("#{user.first_name} #{user.last_name}", user)
  /           %td.text-success.text-center=number_to_currency(amount_raised(user))
  - if @sponsors.count > 0
    .row
      %br
      %h2.text-center We Thank Our Sponsors
      - @sponsors.each do |sponsor|
        .col-md-3
          .thumbnail
            .image-spaced
              = link_to image_tag(sponsor.logo.url(:medium), size: "150", class: "image-spaced center-block"), sponsor.url
            .text-center= sponsor.name
